<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@drawable/legalback"
    >

    <Button
        android:id="@+id/Contacto"
        android:layout_width="135dp"
        android:layout_height="53dp"
        android:text="Contacto"
        android:textColorHighlight="#3F51B5"
        android:textColorLink="#3F51B5"
        app:backgroundTint="@color/azul_marino"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="620dp" />

    <TextView
        android:id="@+id/perfilprofesional"
        android:layout_width="347dp"
        android:layout_height="139dp"
        android:text="Abogada, Licenciada en Ciencias Jurídicas y Sociales de la de la Universidad Católica del Norte. Postulante al grado de Magister en Derecho. Con experiencia en litigación y docencia."
        android:textAlignment="center"
        android:textColor="#D5B07B"
        android:textColorHint="#ECE4E4"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.185" />

    <TextView
        android:id="@+id/especialidad2"
        android:layout_width="163dp"
        android:layout_height="73dp"
        android:text="Derecho de Familia y Violencia Intrafamiliar"
        android:textSize="16sp"
        android:textColor="#D5B07B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.168"
        app:layout_constraintStart_toEndOf="@+id/especialidad"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.759" />

    <TextView
        android:id="@+id/especialidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Especialidad: "
        android:textColor="#D5B07B"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="164dp"
        android:layout_height="51dp"
        android:text="5 años de experiencia "
        android:textColor="#D5B07B"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/especialidad2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.321"
        app:layout_constraintStart_toEndOf="@+id/exp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928" />

    <TextView
        android:id="@+id/exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experiencia:"
        android:textColor="#D5B07B"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="428dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="219dp"
        android:layout_height="201dp"
        app:srcCompat="@drawable/galita"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="49dp" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="131dp"
        android:layout_height="202dp"
        android:text="Luisa Alison Ramos Muñoz"
        android:textColor="#D5B07B"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        tools:layout_editor_absoluteY="49dp" />


</androidx.constraintlayout.widget.ConstraintLayout>